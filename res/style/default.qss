
QGroupBox {
	border: 1px solid #999;
	border-radius: 2px;
	margin-top: 1px;
	margin: 4px;
	padding: 8px;
}

QGroupBox::title {
	subcontrol-origin: margin;
	subcontrol-position: top left;
	padding: 0px 3px;
	left: 14px;
}

QLCDNumber {
	background-color: #444444;
	border: 1px solid #222;
	border-radius: 4px;
}

QLCDNumber#lcdTimer {
	color: orange;
}

QLCDNumber#lcdAttempts {
	color: lightgreen;
}
